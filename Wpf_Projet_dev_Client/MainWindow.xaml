<Window x:Class="Wpf_Projet_dev_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Projet_dev_Client"
        mc:Ignorable="d"
        Title="Dechiffrage" Height="450" Width="800" Background="Black" >
    <StackPanel Margin="0,96,0,0"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="258" >

        <Label Content="Connexion" Height="55" Foreground="White" RenderTransformOrigin="0.49,0.582" FontSize="30"  FontFamily="Lato" HorizontalAlignment="Center" Width="166" HorizontalContentAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Nom utilisateur" Foreground="White"/>
        <TextBox Name="txtLogin" Foreground="Black"/>
        <Label Content="Mot de passe" Foreground="White"/>
        <TextBox Name="txtPwd" Foreground="Black"/>
        
        <Button Name="BtnSubmit" Click="BtnSubmit_Click" Content="Envoyer"  Height="30" Margin="0,10,0,0" />
        <Label Visibility="Hidden" Name="NotifError" Content="Login, mot de passe ou token app incorrect" Foreground="White"/>


    </StackPanel>

</Window>
